<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>News Portal</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="imgs/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="imgs/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
						<li><a href="/news">NEWS</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">

		<% if(validation.length > 0) { %> 
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Attention!</strong>
						<ul>
							<% for(var i = 0; i < validation.length; i++) { %> 
								<li><%= validation[i].msg %></li>
							<% } %> 
						</ul>
					</div>
				</div>
			</div>
		<% } %> 
	    	<div class="row">
	    		<div class="col-md-12">
	    			<form action="/news/save" method="post">
						<div class="form-group">
							<label for="titulo">Title:</label>
							<input type="text" class="form-control" id="title" name="title">
						</div>

						<div class="form-group">
							<label for="pwd">Summary:</label>
							<input type="text" class="form-control" id="resume" name="resume">
						</div>
						
						<div class="form-group">
							<label for="pwd">Author:</label>
							<input type="text" class="form-control" id="author" name="author">
						</div>

						<div class="form-group">
							<label for="pwd">Date:</label>
							<input type="date" class="form-control" id="news_date" name="news_date">
						</div>

						<div class="form-group">
							<label for="pwd">News:</label>
							<textarea class="form-control" id="news" name="news"></textarea>
						</div>


						<button type="submit" class="btn btn-default">Register</button>
						</form>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>