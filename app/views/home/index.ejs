<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>News Portal</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="imgs/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="imgs/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="index.html">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-8">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%= news[0].author %></span>
		    			<a href="news_detail?id_news=<%= news[0].id_news %>" class="noticia_titulo"><%= news[0].title %></a>
		    			<span class="noticia_data"><%= news[0].news_date %></span>
		    			<br />
		    			<p class="noticia_resumo">
		    				<%= news[0].resume %>
		    			</p>
		    		</div>
		    	</div>

	    		<div class="col-md-4">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%= news[1].author %></span>
		    			<a href="news_detail?id_news=<%= news[1].id_news %>" class="noticia_titulo"><%= news[1].title %></a>
		    			<span class="noticia_data"><%= news[1].news_date %></span>

		    			<br />
		    			<p class="noticia_resumo">
		    				<%= news[1].resume %>
		    			</p>
		    		</div>
		    	</div>
	    	</div>

	    	<div class="row">
				<% for(var i = 2; i < news.length; i++) { %> 
					<div class="col-md-4">
						<div class="noticia_wrapper">
							<span class="noticia_autor"><%= news[i].author %></span>
							<a href="news_detail?id_news=<%= news[i].id_news %>" class="noticia_titulo"><%= news[i].title %></a>
							<span class="noticia_data"><%= news[i].news_date %></span>

							<br />
							<p class="noticia_resumo">
								<%= news[i].resume %>
							</p>
						</div>
					</div>
				<% } %> 
	    	</div>

	    	<div class="row ver_mais">
	    		<button type="button" class="btn btn-default"><a href="news">See all the news</a></button>
	    	</div>

	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>